baseURL = 'https://test.jobcher.com'
theme = "blog-theme"
languageCode = 'zh-CN'
title = '打工人日志'
# 相对地址
relativeURLs = true
uglyURLs = true
# 显示数量
paginate = 10  #每页显示行数
paginatePath = "page"

[permalinks]
  posts = "/:slug/"

[outputs]
  home = ["HTML", "RSS", "JSON"]
  page = ["HTML"]
  section = ["HTML", "RSS"]
  taxonomy = ["HTML", "RSS"]

# 代码高亮
[markup]
  [markup.highlight]
    codeFences = true
    guessSyntax = true
    hl_Lines = ""
    lineNoStart = 1
    lineNos = false
    lineNumbersInTable = true
    noClasses = true
    style = "monokai"
    tabWidth = 4

